{
    "parser": "babel-eslint",
    "extends": "airbnb",
    "env": {
        "browser": true,
        "jest": true
    },
    "plugins": ["react", "jsx-a11y", "import", "babel-plugin-root-import"],
    "rules": {
        "react/jsx-filename-extension": [
            "error",
            {
                "extensions": [".js", ".jsx"]
            }
        ],
        "global-require": "off",
        "import/prefer-default-export": "off"
    },
    "settings": {
        "import/resolver": {
            "babel-plugin-root-import": {
                "rootPathPrefix": "~",
                "rootPathSuffix": "src"
            }
        }
    }
}
